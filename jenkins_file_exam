pipeline{
  agent any

  tools{
    jdk 'jdk21'
  }

  stages{
    stage('checkout'){
      steps{
        git branch:'main',url:'https://github.com/BKarthik03/Devops_Exam_1'
      }
    }

    stage('Compile Java Program'){
      steps{
        echo "Compiling Java Program"
        sh 'javac HelloWorld.java'
      }
    }

    stage('Executing Java Program'){
      steps{
        echo "Executing Java Program"
        sh 'java HelloWorld'
      }
    }

    stage('Executing Python Program'){
      steps{
        echo "Executing Python Program"
        sh 'python3 mat.py'
      }
    }
  }

  post{
    success{
      echo "Successful Execution!!"
    }
    failure{
      echo "Execution Failed!!"
    }
  }
}
